import numbers as np
from pathlib import Path

def try_load_data():
    p = Path('.')
    names_npy = [('cityA_clean.npy', 'cityB_clean.npy'),
                 ('cityA.npy', 'cityB.npy'),
                 ('city_a.npy', 'city_b.npy')]
    for na, nb in names_npy:
        if (p/na).exists() and (p/nb).exists():
            price_a = np.load(na)
            price_b = np.load(nb)
            months = np.array([f"2025-{m:02d}" for m in range(1, 13)], dtype=str)
            return months, price_a.astype(float), price_b.astype(float)
    csv_pairs = [('apartment_price_cityA.csv', 'apartment_price_cityB.csv'),
                 ('cityA.csv', 'cityB.csv'),
                 ('city_a.csv', 'city_b.csv')]
    for ca, cb in csv_pairs:
        if (p/ca).exists() and (p/cb).exists():
            da = np.genfromtxt(ca, delimiter=',', dtype=str, encoding='utf-8')
            db = np.genfromtxt(cb, delimiter=',', dtype=str, encoding='utf-8')
            if da.shape[0] > 0 and 'month' in da[0,0].lower():
                da = da[1:]
            if db.shape[0] > 0 and 'month' in db[0,0].lower():
                db = db[1:]
            months = da[:,0]
            price_a = da[:,1].astype(float)
            price_b = db[:,1].astype(float)
            return months, price_a, price_b
    months = np.array([f"2025-{m:02d}" for m in range(1, 13)], dtype=str)
    price_a = np.array([1850, 1820, 1900, 2050, 1980, 2100, 2250, 2300, 2170, 2200, 2180, 2300], dtype=float)
    price_b = np.array([1720, 1710, 1750, 1800, 1790, 1850, 2000, 2100, 1950, 1960, 1970, 2050], dtype=float)
    print("(!) Lưu ý: Không tìm thấy file input, sử dụng dữ liệu mẫu để sinh ket_qua_case4.csv\n")
    return months, price_a, price_b

def compute_statistics(months, price_a, price_b):
    stats = {}
    stats['A_mean'] = np.mean(price_a)
    stats['A_min'] = np.min(price_a)
    stats['A_max'] = np.max(price_a)
    stats['A_std'] = np.std(price_a, ddof=0)
    stats['A_argmax'] = months[np.argmax(price_a)]
    stats['A_argmin'] = months[np.argmin(price_a)]
    stats['B_mean'] = np.mean(price_b)
    stats['B_min'] = np.min(price_b)
    stats['B_max'] = np.max(price_b)
    stats['B_std'] = np.std(price_b, ddof=0)
    stats['B_argmax'] = months[np.argmax(price_b)]
    stats['B_argmin'] = months[np.argmin(price_b)]
    return stats

def label_months(months, price_a, price_b):
    n = len(months)
    label = np.zeros(n, dtype=int)
    diff = price_a - price_b
    pct_a = np.zeros(n, dtype=float)
    pct_b = np.zeros(n, dtype=float)
    pct_a[1:] = (price_a[1:] - price_a[:-1]) / price_a[:-1]
    pct_b[1:] = (price_b[1:] - price_b[:-1]) / price_b[:-1]
    mask_inc = (pct_a > 0.10) | (pct_b > 0.10)
    mask_dec = (pct_a < -0.10) | (pct_b < -0.10)
    mask_diff = np.abs(diff) >= 200.0
    label[mask_diff] = 3
    label[mask_dec] = 2
    label[mask_inc] = 1
    return diff, label

def save_results(months, price_a, price_b, diff, label, out_csv='ket_qua_case4.csv'):
    header = "Month,Price_A,Price_B,Diff,Label"
    lines = [header]
    for m,a,b,d,l in zip(months, price_a, price_b, diff, label):
        lines.append(f"{m},{a:.2f},{b:.2f},{d:.2f},{int(l)}")
    with open(out_csv, 'w', encoding='utf-8') as f:
        f.write("\\n".join(lines))
    print(f"Saved results to {out_csv}")

def main():
    months, price_a, price_b = try_load_data()
    assert len(months) == 12, "Dữ liệu cần có 12 tháng"
    assert price_a.shape == price_b.shape, "price_A và price_B phải cùng shape"
    print("Dtype và shape:")
    print("months:", months.dtype, months.shape)
    print("price_a:", price_a.dtype, price_a.shape)
    print("price_b:", price_b.dtype, price_b.shape)
    print("\\nFirst 3 months:")
    for i in range(3):
        print(months[i], price_a[i], price_b[i])
    print("\\nLast 3 months:")
    for i in range(-3,0):
        print(months[i], price_a[i], price_b[i])
    stats = compute_statistics(months, price_a, price_b)
    print("\\nStatistics:")
    for k,v in stats.items():
        print(f"{k}: {v}")
    diff, label = label_months(months, price_a, price_b)
    save_results(months, price_a, price_b, diff, label)

if __name__ == '__main__':
    main()
